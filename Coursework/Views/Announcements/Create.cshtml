@model Coursework.Models.Announcement

@{
    ViewData["Title"] = "Create";
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
   
    <script>
        function checkTime(i) {
            if (i < 10) {
                i = "0" + i;
            }
            return i;
        }

        function startTime() {
            var today = new Date();
            var h = today.getHours();
            var m = today.getMinutes();
            var s = today.getSeconds();
            // add a zero in front of numbers<10
            m = checkTime(m);
            s = checkTime(s);
            var x = h + ":" + m + ":" + s
            document.getElementById("s1").value = x;
            t = setTimeout(function () {
                startTime()
            }, 500);
        }
        
        startTime();
    </script>

    <title></title>
</head>
<body class="bodyPad" onload="startTime()">

  


    <h2>Create</h2>

    <form asp-action="Create">
        <div class="form-horizontal">
            <h4>Announcement</h4>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Message" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Message" class="form-control" />
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                
                <div class="col-md-10">
                    <input asp-for="Views" type="hidden" value="1" class="form-control" />

                </div>
            </div>
            <div class="form-group">

                <div class="col-md-10">
                    <input type="hidden" id="s1" value="" asp-for="Time" class="form-control" />

                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>

        </div>
    </form>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</body>
</html>


